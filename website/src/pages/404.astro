---
import Layout from "../components/Layout.astro";

const title = "Page Not Found - AgentInterface";
const description = "The page you're looking for doesn't exist or has been moved.";
---

<Layout 
	title={title}
	description={description}
	canonicalUrl="https://agentinterface.dev/404"
	keywords="404, not found, error"
>
	<div class="flex min-h-[70vh] items-center justify-center px-4 py-16 sm:px-6 lg:px-8">
		<div class="text-center">
			<h1 class="text-6xl font-bold text-blue-500">404</h1>
			<h2 class="mt-4 text-3xl font-bold text-white">Page Not Found</h2>
			<p class="mt-4 text-xl text-gray-300">
				The page you're looking for doesn't exist or has been moved.
			</p>
			<div class="mt-8">
				<a
					href="/"
					class="inline-flex items-center justify-center rounded-lg bg-blue-600 px-6 py-3 text-base font-semibold text-white transition-all hover:bg-blue-500 focus:ring-4 focus:ring-blue-500/50"
				>
					Go Home
				</a>
			</div>
		</div>
	</div>
</Layout>