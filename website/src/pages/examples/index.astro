---
import Layout from "../../components/Layout.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import Card from "../../components/Card.astro";

const title = "Examples - AgentInterface";
const description = "Explore examples of AgentInterface in action, from basic usage to advanced applications.";

const examples = [
  {
    title: "Basic Usage",
    description: "Learn the basics of AgentInterface with simple examples for both Python and JavaScript.",
    href: "/examples/basic/hello-world",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>',
    variant: "primary"
  },
  {
    title: "Text Components",
    description: "Examples of text-based components like Text, Markdown, and Code.",
    href: "/examples/basic/text-components",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>',
    variant: "primary"
  },
  {
    title: "Interactive Components",
    description: "Learn how to use buttons, forms, and other interactive components.",
    href: "/examples/basic/interactive-components",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122" /></svg>',
    variant: "primary"
  },
  {
    title: "Media Components",
    description: "Examples of using images, videos, and other media components.",
    href: "/examples/basic/media-components",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>',
    variant: "secondary"
  },
  {
    title: "Layout Components",
    description: "Learn how to structure your UI with layout components.",
    href: "/examples/advanced/layout-components",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" /></svg>',
    variant: "secondary"
  },
  {
    title: "Custom Components",
    description: "Create your own custom components to extend AgentInterface.",
    href: "/examples/advanced/custom-components",
    icon: '<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" /></svg>',
    variant: "secondary"
  }
];
---

<Layout 
	title={title}
	description={description}
	canonicalUrl="https://agentinterface.dev/examples"
	keywords="agentinterface examples, demos, code samples"
>
	<div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
		<SectionHeader
			title="Examples"
			subtitle="Explore examples of AgentInterface in action"
			align="left"
		/>
		
		<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
			{examples.map((example) => (
				<Card
					title={example.title}
					description={example.description}
					icon={example.icon}
					href={example.href}
					variant={example.variant}
				/>
			))}
		</div>
		
		<div class="mt-16 text-center">
			<p class="text-gray-400">
				More examples coming soon! Check back regularly for updates.
			</p>
		</div>
	</div>
</Layout>