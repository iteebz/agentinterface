---
export interface Props {
	title: string;
	description: string;
	icon?: string;
	href?: string;
	variant?: "default" | "primary" | "secondary";
}

const { 
	title, 
	description, 
	icon, 
	href, 
	variant = "default" 
} = Astro.props;

const variantStyles = {
	default: "border-gray-700 bg-gray-800/50",
	primary: "border-blue-500/20 bg-gradient-to-r from-blue-500/10 to-purple-500/10",
	secondary: "border-purple-500/20 bg-gradient-to-r from-purple-500/10 to-teal-500/10"
};
---

<div class={`rounded-xl border ${variantStyles[variant]} p-8 transition-all hover:border-opacity-50 hover:shadow-lg`}>
	{icon && (
		<div class="mb-4 inline-flex rounded-lg bg-blue-500/20 p-3 text-blue-400">
			<span set:html={icon} />
		</div>
	)}
	<h3 class="mb-3 text-xl font-semibold text-white">
		{href ? (
			<a href={href} class="hover:text-blue-400 transition-colors">
				{title}
			</a>
		) : (
			title
		)}
	</h3>
	<p class="text-gray-300">
		{description}
	</p>
	<slot />
</div>