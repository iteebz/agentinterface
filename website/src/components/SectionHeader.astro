---
export interface Props {
	title: string;
	subtitle?: string;
	align?: "left" | "center" | "right";
}

const { 
	title, 
	subtitle, 
	align = "center" 
} = Astro.props;

const textAlign = {
	left: "text-left",
	center: "text-center",
	right: "text-right"
};
---

<div class={`mb-16 ${textAlign[align]}`}>
	<h2 class="mb-4 text-3xl font-bold text-white sm:text-4xl">
		{title}
	</h2>
	{subtitle && (
		<p class="mx-auto max-w-2xl text-xl text-gray-300">
			{subtitle}
		</p>
	)}
</div>