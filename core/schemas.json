{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Interface Protocol Core Schemas",
  "description": "Language-agnostic schemas for the Agent Interface Protocol",
  "definitions": {
    "InterfaceType": {
      "type": "string",
      "enum": [
        "markdown",
        "project_cards", 
        "expandable_detail",
        "key_insights",
        "timeline",
        "tech_deep_dive",
        "inline_link"
      ],
      "description": "Available interface types for agent responses"
    },
    "InterfaceData": {
      "type": "object",
      "description": "Generic interface data container",
      "additionalProperties": true
    },
    "AgentResponse": {
      "type": "object",
      "required": ["response"],
      "properties": {
        "thinking": {
          "type": "string",
          "description": "Agent's reasoning process"
        },
        "response": {
          "type": "string",
          "description": "Conversational response content"
        },
        "interface_type": {
          "$ref": "#/definitions/InterfaceType",
          "default": "markdown",
          "description": "UI component type"
        },
        "interface_data": {
          "$ref": "#/definitions/InterfaceData",
          "description": "Component-specific data"
        }
      }
    },
    "ProjectCard": {
      "type": "object",
      "required": ["title", "description"],
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "link": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["active", "completed", "archived"]
        }
      }
    },
    "TimelineEvent": {
      "type": "object",
      "required": ["title", "date"],
      "properties": {
        "title": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["milestone", "event", "achievement"]
        }
      }
    },
    "KeyInsight": {
      "type": "object",
      "required": ["category", "insights"],
      "properties": {
        "category": {
          "type": "string"
        },
        "insights": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}